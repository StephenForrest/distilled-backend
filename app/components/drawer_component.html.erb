<div class="w-full h-full bg-white absolute top-0 left-0 overflow-auto">
  <div class="flex items-center justify-between px-6 py-4 border-b border-gray-300">
    <div class="flex items-center">
      <%= image_tag logo_url, class: "h-8" %>
    </div>
    <div class="md:hidden">
      <button class="flex items-center px-3 py-2 border rounded text-gray-500 border-gray-600 hover:text-gray-800 hover:border-gray-800 focus:outline-none focus:shadow-outline transition duration-150 ease-in-out">
        <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M3 3h14a1 1 0 0 1 0 2H3a1 1 0 1 1 0-2zm0 5h14a1 1 0 0 1 0 2H3a1 1 0 1 1 0-2zm0 5h14a1 1 0 0 1 0 2H3a1 1 0 1 1 0-2z"/></svg>
      </button>
    </div>
  </div>
  <div class="px-4 py-6">
    <ul>
      <% TABS.each do |tab| %>
        <li class="mb-4">
          <%= link_to tab[:title], tab[:path], class: "text-gray-700 font-bold text-lg hover:text-gray-900 transition duration-150 ease-in-out" %>
        </li>
      <% end %>
    </ul>
    <div class="mt-12">
      <ul>
        <% BOTTOM_TABS.each do |tab| %>
          <li class="mb-4">
            <%= link_to tab[:title], tab[:path], class: "text-gray-600 font-bold text-sm hover:text-gray-700 transition duration-150 ease-in-out" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>