<!-- app/components/north_star_modal_component.html.erb -->

<div class="fixed z-50 inset-0 overflow-y-auto">
  <div class="flex items-center justify-center min-h-screen">
    <div class="bg-white rounded-md overflow-hidden shadow-xl w-80">
      <div class="bg-blue-400 text-white p-4 flex items-center justify-between">
        <%= content_for :header do %>
          <div class="flex items-center">
            <% if @star_icon.present? %>
              <%= icon @star_icon, class: "h-6 w-6 mr-2" %>
            <% end %>
            <h2 class="text-lg font-semibold"><%= @company_name %></h2>
          </div>
          <button class="text-white hover:text-gray-300 focus:outline-none">
            <%= icon "star", class: "h-6 w-6" %>
          </button>
        <% end %>
        <%= yield_content :header %>
      </div>
      <div class="p-4">
        <%= content_for :title do %>
          <h3 class="font-bold text-xl mb-2"><%= yield_content :title %></h3>
        <% end %>
        <%= content_for :description do %>
          <p class="text-gray-700 text-base mb-4"><%= yield_content :description %></p>
        <% end %>
        <div class="flex items-center mb-4">
          <%= content_for :author do %>
            <%= avatar_image_tag yield_content(:author), class: "h-8 w-8 rounded-full mr-2" %>
          <% end %>
          <span class="text-gray-600 font-bold text-sm"><%= yield_content :creation_date %></span>
        </div>
        <%= content_for :health do %>
          <div class="flex items-center">
            <span class="text-gray-600 font-bold text-sm mr-2">Health:</span>
            <%= badge yield_content(:health), class: "text-white bg-blue-500 rounded-full py-1 px-2" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
