<div class="flex flex-col space-y-8">
  <% @activities.each do |activity| %>
    <div class="relative">
      <% if activity[:badge].present? %>
        <div class="absolute top-0 right-0 text-white bg-indigo-500 rounded-full px-2 py-1 text-xs">
          <%= activity[:badge] %>
        </div>
      <% end %>
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <%= image_tag(activity[:user_avatar], class: "w-10 h-10 rounded-full") %>
        </div>
        <div class="ml-4">
          <div class="text-sm font-medium text-gray-900">
            <%= activity[:user_name] %>
          </div>
          <div class="text-sm text-gray-500">
            <%= activity[:date] %>
          </div>
          <div class="mt-2 text-sm text-gray-700">
            <%= activity[:description] %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div> 